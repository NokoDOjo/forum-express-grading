<h1>人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="card mb-3" >
  <div class="row no-gutters">
    <div class="col-md-4">
      <a href="/restaurants/{{this.id}}">
        <img src="{{this.image}}" style="max-width: 500px;">
      </a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <span class="badge badge-secondary">追蹤人數：{{this.FavoritedCount}}</span>
        <p class="card-text" style="text-overflow: ellipsis; overflow:hidden; white-space:nowrap">{{this.description}}</p>
        <div class="d-flex">
          <a href="/restaurants/{{this.id}}" class="btn btn-primary mr-3">Show</a>
          {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                type="submit" class="btn btn-danger">移除最愛</button></form>
          {{else}}
            <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
                class="btn btn-primary">加入最愛</button></form>
        {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}