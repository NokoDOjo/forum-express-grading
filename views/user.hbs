<div class="row d-flex justify-content-between">
  <div class="col-lg-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 300px ; margin-bottom: 25px;">
  </div>
  <div class="col-lg-6">
    <h2>{{user.name}}</h2>
    <p>{{user.email}}</p>
    <h4>{{totalComments}}已評論餐廳</h4>
    <a href="/users/{{user.id}}/edit" type="button" class="btn btn-outline-info mt-5">
      edit
    </a>
  </div>
</div>

<div class="card">
  <h5 class="card-header">{{totalComments}}已評論餐廳</h5>
  <div class="card-body d-flex flex-wrap">
    {{#each user.Comments}}
      <a href="/restaurants/{{this.Restaurant.id}}" style="display: inline-block;">
        <img src="{{this.Restaurant.image}}" style="width: 200px ; margin-bottom: 25px ; margin-left: 20px">
      </a>
    {{/each}}
  </div>
</div>